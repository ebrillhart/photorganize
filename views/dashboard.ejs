<main>
<div class="container">
	<div class="col m12">
		<!-- search container -->
		<div class="row valign-wrapper">
			<div class="col m1 offset-m2">
				<i class="material-icons vertical-align right">search</i>
			</div>
			<div class ="col m6">
				<form class="center-align" action="<%= '/user/' + user.id + '/dashboard/tag' %>" method="POST" role="search" autocomplete="off">
	    			<div class="form-group input-field">
	         			<input id="input" type="text" placeholder="Search by Tag" name="tag"required>
	        		</div>
	      		</form>
	      		<div class="row center-align">
	      			<a class="center-align waves-effect waves-light btn cyan accent-4" href="<%= '/user/' + user.id + '/dashboard' %>">Clear Search</a>
	      		</div>
      		</div>
		</div>
		<!-- photo display container -->
		<div class ="row">
			<% photos.forEach(function(photo) { %>
				<div class="col m3">
					<div class="card z-depth-3">
    					<div class="card-image waves-effect waves-block waves-light">
      						<img class="activator" src="<%= photo.thumbnail %>" id="<%= photo.id %>">
    					</div>
    					<div class="card-reveal">
    						<div class="row">
      							<span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
      						</div>
      						<div class="row valign-wrapper center-align">
      							<div class="col s6 m6 l6 offset-s3 offset-m3 offset-l3">
      								<p class="center-align vertical-align"><a href="<%= '/user/' + photo.userId + '/photo/' + photo.id %>">Details</a></p>
      							</div>
      						</div>
    					</div>
  					</div>
				</div>
			<% }); %>
		</div>	
	</div>
</div>
</main>
