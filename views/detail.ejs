<!-- photo info div -->
<!-- ************** -->
<main>
    <div class="container z-depth-3" id="displayCon">
        <div class="row valign-wrapper">
            <div class="col s6">
                <h5><%= photo.posterName %></h5>
                <% if(photo.locationName != null) { %>
                <h6><a target="_blank" href="https://www.google.com/maps/search/<%= photo.locationName %>/@<%= photo.lat %>,<%= photo.long %>"><%= photo.locationName %></a></h6>
                <% } %>
                <img class="responsive-img" id="displayImg" src="<%= photo.standardRes %>">
                <h6><%= photo.likeCount %> likes</h6>
                <h6><%= photo.caption %></h6>
                <h6><a href="<%= photo.link %>" target="_blank">View on Instagram</a></h6>
            </div>
            <!-- ******** -->
            <!-- add tags -->
            <!-- ******** -->
            <div class="col s6 m6 l6">
                <div class="row valign">
                    <div class="col s6 m6 l6 offset-s3 offset-m3 offset-l3">
                        <form class="center-align" action="/user/<%= user.id %>/photo/<%= photo.id %>/tag" method="POST" autocomplete="off">
                            <div class="form-group input-field">
                                <input type="text" placeholder="Add Tag" length="20" name="tag" required>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- *********************** -->
                <!-- display and remove tags -->
                <!-- *********************** -->
                <div class="row">
                    <div class="container" id="tagDisplay">
                        <% tags.forEach(function(tag) { %>
                        <div class="col s5 m5 l5">
                            <div class="chip valign-wrapper">
                                <%= tag.tag %>
                                <a class="vertical-align" href="/user/<%= user.id %>/photo/<%= photo.id %>/tag/<%= tag.id %>"><i class="material-icons tiny vertical-align">close</i></a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <!-- ************** -->
                <!-- add/edit notes -->
                <!-- ************** -->
                <div class="row">
                    <div class="col s6 m6 l6 offset-s3 offset-m3 offset-l3">
                        <form class="center-align" action="/user/<%= user.id %>/photo/<%= photo.id %>/note" method="POST" autocomplete="off">
                            <div class="form-group input-field">
                                <input type="text" placeholder="Add Note" length="50" name="note" required></input>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- ************* -->
                <!-- display notes -->
                <!-- ************* -->
                <div class="row">
                    <div class="container" id="noteDisplay">
                        <div class="col s10 m10 l12 offset-s1 offset-m1">
                            <ul>
                                <% notes.forEach(function(note) { %>
                                <li><%= note.noteText %> <a href="/user/<%= user.id %>/photo/<%= photo.id %>/note/<%= note.id %>"><i class="material-icons tiny vertical-align">close</i></a></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- ************** -->
                <!-- archive button -->
                <!-- ************** -->
                <div class="row">
                    <div class="col s8 m8 l8 offset-s2 offset-m2 offset-l2 center-align">
                        <a class="waves-effect waves-light btn center-align light-blue darken-4" href="<%= '/user/' + user.id + '/dashboard' %>">Back to Dashboard</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6 l6 offset-s3 offset-m3 offset-l3 center-align">
                        <a class="waves-effect waves-light btn center-align light-blue darken-4" href="<%= '/user/' + user.id + '/photo/' + photo.id + '/hide' %>">Archive</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
